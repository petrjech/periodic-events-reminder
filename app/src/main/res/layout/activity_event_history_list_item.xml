<?xml version="1.0" encoding="utf-8"?><!--  Single List Item Design -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/events_history_list_item"
    style="@style/CustomField"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/field_padding">

    <View
        android:id="@+id/events_history_list_item_color"
        android:layout_width="@dimen/event_history_item_color_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/field_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/events_history_list_item_date"
            style="@style/CustomFieldInner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/field_margin" />

        <TextView
            android:id="@+id/events_history_list_item_action"
            style="@style/CustomFieldInner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/events_history_list_item_date"
            android:layout_marginLeft="@dimen/field_margin" />


        <TextView
            android:id="@+id/events_history_list_item_note"
            style="@style/CustomFieldInner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/events_history_list_item_date"
            android:layout_marginLeft="@dimen/field_margin" />

    </RelativeLayout>

</LinearLayout>