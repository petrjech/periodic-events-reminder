<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActivityUpdateEvent"
    tools:showIn="@layout/activity_update_event">

    <TextView
        android:id="@+id/update_event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/update_event_periodicity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_update_event_last_action_title" />

            <TextView
                android:id="@+id/update_event_last_action_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dp" />

            <TextView
                android:id="@+id/update_event_last_action_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/update_event_last_action_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dp"
                android:layout_column="1" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/update_event_next_occurrence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/CustomFieldTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_update_event_note" />

    <EditText
        android:id="@+id/update_event_input_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/update_event_accomplished_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@string/activity_update_event_accomplished_button"
        android:onClick="onAccomplishedButtonClick"/>

    <TextView
        style="@style/CustomFieldTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_update_event_postpone_days" />

    <EditText
        android:id="@+id/update_event_input_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="1" />

    <Button
        android:id="@+id/update_event_postpone_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@string/activity_update_event_postpone_button"
        android:onClick="onPostponeButtonClick"/>

    <Button
        android:id="@+id/update_event_skip_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@string/activity_update_event_skip_button"
        android:onClick="onSkipButtonClick"/>

    <Button
        android:id="@+id/update_event_show_full_history_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@string/activity_update_event_show_full_history_button"
        android:onClick="onHistoryButtonClick"/>

    <Button
        android:id="@+id/update_event_modify_event_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="@string/activity_update_event_modify_event_button"
        android:onClick="onModifyButtonClick"/>

</LinearLayout>
