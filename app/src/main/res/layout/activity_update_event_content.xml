<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActivityUpdateEvent"
    tools:showIn="@layout/activity_update_event">

    <TextView
        style="@style/CustomFieldLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_update_event_description_label" />

    <TextView
        android:id="@+id/update_event_description"
        style="@style/CustomField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                style="@style/CustomFieldLabel"
                android:layout_weight="0.25"
                android:text="@string/activity_update_event_next_occurrence_label" />

            <TextView
                style="@style/CustomFieldLabel"
                android:layout_weight="0.25"
                android:text="@string/activity_update_event_periodicity_label" />

            <TextView
                style="@style/CustomFieldLabel"
                android:layout_weight="0.25"
                android:text="@string/activity_update_event_is_active_label" />

            <TextView
                style="@style/CustomFieldLabel"
                android:layout_weight="0.25"
                android:text="@string/activity_update_event_is_widget_visible_label" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/update_event_next_occurrence"
                style="@style/CustomField" />

            <TextView
                android:id="@+id/update_event_periodicity"
                style="@style/CustomField" />

            <TextView
                android:id="@+id/update_event_is_active"
                style="@style/CustomField" />

            <TextView
                android:id="@+id/update_event_is_widget_visible"
                style="@style/CustomField" />
        </TableRow>
    </TableLayout>

    <TextView
        style="@style/CustomFieldLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:text="@string/activity_update_event_last_action_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/update_event_last_action_date"
            style="@style/CustomField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/update_event_last_action_action"
            style="@style/CustomField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/CustomField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:onClick="onHistoryButtonClick"
            android:text="@string/activity_update_event_show_history"
            android:textColor="@color/colorLightDisabled"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/update_event_last_action_note"
        style="@style/CustomField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/update_event_input_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|left"
                android:hint="@string/activity_update_event_note"
                android:inputType="text"
                style="@style/CustomField"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/update_event_accomplished_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:onClick="onAccomplishedButtonClick"
                android:text="@string/activity_update_event_accomplished_button" />

            <Button
                android:id="@+id/update_event_skip_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onSkipButtonClick"
                android:text="@string/activity_update_event_skip_button" />

            <Button
                android:id="@+id/update_event_postpone_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onPostponeButtonClick"
                android:text="@string/activity_update_event_postpone_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/update_event_input_days"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="1" />

                <TextView
                    style="@style/CustomFieldLabel"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_update_event_postpone_days" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
